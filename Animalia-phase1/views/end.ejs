    function doSomething() {
      var ask = window.confirm("Do you want to download HIRO marker? Press 'ok', else 'cancel'");
      if (ask) {
        window.open('/downloadmarker', '_blank');
      } else {
        window.open('/signin/homepage/andhra_pradesh/quiz/claim_reward', '_blank');
      }
    }
  </script>
  <% } %>

  <script>
    function close_window() {
